procedure TBuilderConfig.StartScript(sender: TObject); override;
begin
  CurrentNPC := ERSNPC(Self.NPCSelector.GetItemIndex());
  CurrentFurniture := ERSFurniture(Self.FurnitureSelector.GetItemIndex());
  inherited;
end;

