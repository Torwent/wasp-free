var
  combobox: TComboBox;
begin
  combobox := sender;
  case combobox.getItemIndex() of
    0: Self.BuilderInfo.SetCaption(
       'Make sure you have noted planks with you.' +

       LineEnding + LineEnding +
       'Your house layout must look exactly like the image to the right!' +
       LineEnding +
       'Looking close enough won''t do, it has to look exactly the same.' +
       LineEnding +
       'If you have more rooms, move them 3 squares away so they are never,' +
       LineEnding +
       'ever visible on the minimap.'
       );

    1: Self.BuilderInfo.SetCaption(
